<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_light_gray"
    android:orientation="vertical"
    tools:context="com.dnareader.activities.ResultActivity" >

    <TextView
        android:id="@+id/result_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="@string/result_date" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/app_gray" />

    <TextView
        android:id="@+id/result_result"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="@string/result_result" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/app_gray" />

    <ExpandableListView
        android:id="@+id/expandable_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >
    </ExpandableListView>

</LinearLayout>